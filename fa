        // ============================================
        // FUN√á√ïES DE INICIALIZA√á√ÉO
        // ============================================

        document.addEventListener('DOMContentLoaded', function() {
            console.log('Jordan Store inicializado com', produtos.length, 'produtos');
            renderAllProducts();
            startBannerRotation();
            loadCart();
            loadClienteInfo();
            setupEventListeners();
            updateCartDisplay();
            checkDarkMode();
        });

        function loadClienteInfo() {
            try {
                const saved = localStorage.getItem('jordanstore_cliente_v2');
                if (saved) {
                    const savedInfo = JSON.parse(saved);
                    clienteInfo = { ...clienteInfo, ...savedInfo };
                    if (clienteInfo.cep) {
                        freteCalculado = true;
                    }
                }
            } catch (e) {
                console.error('Erro ao carregar informa√ß√µes do cliente:', e);
            }
        }

        function saveClienteInfo() {
            localStorage.setItem('jordanstore_cliente_v2', JSON.stringify(clienteInfo));
        }

        function setupEventListeners() {
            document.addEventListener('click', function(e) {
                const buyBtn = e.target.closest('.buy-btn');
                const detailsBtn = e.target.closest('.details-btn');

                if (buyBtn) {
                    const productId = buyBtn.dataset.id;
                    if (productId) addToCart(productId);
                }

                if (detailsBtn) {
                    const productId = detailsBtn.dataset.id;
                    if (productId) showProductDetails(productId);
                }
            });

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') closeAllModals();
            });

            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('details-modal')) {
                    closeModal('detailsModal');
                }
                if (e.target.classList.contains('checkout-modal')) {
                    closeCheckout();
                }
                if (e.target.classList.contains('sidebar-overlay')) {
                    toggleSidebar();
                }
                if (e.target.classList.contains('cep-modal')) {
                    closeCepModal();
                }
            });
        }

        // ============================================
        // FUN√á√ïES DO MENU LATERAL
        // ============================================

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebarMenu');
            const overlay = document.querySelector('.sidebar-overlay');
            const hamburger = document.querySelector('.hamburger-menu');

            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');

            if (sidebar.classList.contains('active')) {
                hamburger.style.opacity = '0.7';
            } else {
                hamburger.style.opacity = '1';
            }
        }

        function navigateTo(section) {
            if (section === 'products') {
                window.scrollTo({
                    top: document.querySelector('.filters').offsetTop - 100,
                    behavior: 'smooth'
                });
            } else {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            }

            toggleSidebar();
            updateSidebarActiveItem(section);
        }

        function updateSidebarActiveItem(section) {
            document.querySelectorAll('.sidebar-item').forEach(item => {
                item.classList.remove('active');
            });

            const items = document.querySelectorAll('.sidebar-item');
            switch (section) {
                case 'home':
                    items[0].classList.add('active');
                    break;
                case 'products':
                    items[1].classList.add('active');
                    break;
            }
        }

        function checkDarkMode() {
            if (localStorage.getItem('darkMode') === 'enabled') {
                document.body.classList.add('dark-mode');
            }
        }

        // ============================================
        // RENDERIZA√á√ÉO DE TODOS OS PRODUTOS
        // ============================================

        function renderAllProducts() {
            updateProductsDisplay();
        }

        function updateProductsDisplay() {
            const container = document.getElementById('allProducts');
            if (!container) return;

            let html = '';

            produtos.forEach(produto => {
                const stockClass = getStockClass(produto.estoque);
                const stockText = getStockText(produto.estoque);
                const hasDiscount = produto.precoOriginal && produto.precoOriginal > produto.preco;

                html += `
        <div class="product-card">
            ${produto.estoque <= 3 && produto.estoque > 0 ? 
                `<div class="product-badge">√öLTIMAS UNIDADES</div>` : 
                produto.estoque === 0 ? 
                `<div class="product-badge" style="background:#7f8c8d">ESGOTADO</div>` :
                hasDiscount ? `<div class="product-badge">PROMO√á√ÉO</div>` : ''
            }
            <div class="product-image-container">
                <img src="${produto.imagem}" alt="${produto.nome}" class="product-image" loading="lazy">
            </div>
            <div class="product-info">
                <h3 class="product-name">${produto.nome}</h3>
                <div class="product-price">
                    R$ ${produto.preco.toFixed(2).replace('.', ',')}
                    ${hasDiscount ? `<span>R$ ${produto.precoOriginal.toFixed(2).replace('.', ',')}</span>` : ''}
                </div>
                <div class="stock-info ${stockClass}">${stockText}</div>
                <div class="product-buttons">
                    ${produto.estoque > 0 ? 
                        `<button class="product-btn buy-btn" data-id="${produto.id}">
                            üõí Comprar
                        </button>` :
                        `<button class="product-btn disabled-btn" disabled>
                            üî¥ Esgotado
                        </button>`
                    }
                    <button class="product-btn details-btn" data-id="${produto.id}">
                        üëÄ Detalhes
                    </button>
                </div>
            </div>
        </div>
        `;
            });

            container.innerHTML = html;
        }

        function getStockClass(estoque) {
            if (estoque === 0) return 'stock-out';
            if (estoque <= 3) return 'stock-low';
            if (estoque <= 10) return 'stock-medium';
            return 'stock-high';
        }

        function getStockText(estoque) {
            if (estoque === 0) return 'ESGOTADO';
            if (estoque <= 3) return `√öLTIMAS ${estoque} UNIDADES`;
            if (estoque <= 10) return 'ESTOQUE BAIXO';
            return 'EM ESTOQUE';
        }

        // ============================================
        // SISTEMA DE BUSCA E FILTRO
        // ============================================

        function searchProducts() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            const container = document.getElementById('allProducts');

            if (searchTerm === '') {
                updateProductsDisplay();
                return;
            }

            const filtered = produtos.filter(p =>
                p.nome.toLowerCase().includes(searchTerm) ||
                p.descricao.toLowerCase().includes(searchTerm) ||
                p.categoria.toLowerCase().includes(searchTerm)
            );

            let html = '';

            if (filtered.length === 0) {
                html = '<p style="grid-column:1/-1; text-align:center; padding:40px; color:#666; font-size:18px;">Nenhum produto encontrado. Tente outra busca.</p>';
            } else {
                filtered.forEach(produto => {
                    const stockClass = getStockClass(produto.estoque);
                    const stockText = getStockText(produto.estoque);
                    const hasDiscount = produto.precoOriginal && produto.precoOriginal > produto.preco;

                    html += `
            <div class="product-card">
                ${produto.estoque <= 3 && produto.estoque > 0 ? 
                    `<div class="product-badge">√öLTIMAS UNIDADES</div>` : 
                    produto.estoque === 0 ? 
                    `<div class="product-badge" style="background:#7f8c8d">ESGOTADO</div>` :
                    hasDiscount ? `<div class="product-badge">PROMO√á√ÉO</div>` : ''
                }
                <div class="product-image-container">
                    <img src="${produto.imagem}" alt="${produto.nome}" class="product-image" loading="lazy">
                </div>
                <div class="product-info">
                    <h3 class="product-name">${produto.nome}</h3>
                    <div class="product-price">
                        R$ ${produto.preco.toFixed(2).replace('.', ',')}
                        ${hasDiscount ? `<span>R$ ${produto.precoOriginal.toFixed(2).replace('.', ',')}</span>` : ''}
                    </div>
                    <div class="stock-info ${stockClass}">${stockText}</div>
                    <div class="product-buttons">
                        ${produto.estoque > 0 ? 
                            `<button class="product-btn buy-btn" data-id="${produto.id}">
                                üõí Comprar
                            </button>` :
                            `<button class="product-btn disabled-btn" disabled>
                                üî¥ Esgotado
                            </button>`
                        }
                        <button class="product-btn details-btn" data-id="${produto.id}">
                            üëÄ Detalhes
                        </button>
                    </div>
                </div>
            </div>
            `;
                });
            }

            container.innerHTML = html;
        }

        function sortProducts() {
            const sortBy = document.getElementById('sortSelect').value;
            const container = document.getElementById('allProducts');

            let sortedProducts = [...produtos];

            switch (sortBy) {
                case 'price-asc':
                    sortedProducts.sort((a, b) => a.preco - b.preco);
                    break;
                case 'price-desc':
                    sortedProducts.sort((a, b) => b.preco - a.preco);
                    break;
                case 'name-asc':
                    sortedProducts.sort((a, b) => a.nome.localeCompare(b.nome));
                    break;
                case 'stock':
                    sortedProducts.sort((a, b) => b.estoque - a.estoque);
                    break;
                case 'default':
                    break;
            }

            let html = '';

            sortedProducts.forEach(produto => {
                const stockClass = getStockClass(produto.estoque);
                const stockText = getStockText(produto.estoque);
                const hasDiscount = produto.precoOriginal && produto.precoOriginal > produto.preco;

                html += `
        <div class="product-card">
            ${produto.estoque <= 3 && produto.estoque > 0 ? 
                `<div class="product-badge">√öLTIMAS UNIDADES</div>` : 
                produto.estoque === 0 ? 
                `<div class="product-badge" style="background:#7f8c8d">ESGOTADO</div>` :
                hasDiscount ? `<div class="product-badge">PROMO√á√ÉO</div>` : ''
            }
            <div class="product-image-container">
                <img src="${produto.imagem}" alt="${produto.nome}" class="product-image" loading="lazy">
            </div>
            <div class="product-info">
                <h3 class="product-name">${produto.nome}</h3>
                <div class="product-price">
                    R$ ${produto.preco.toFixed(2).replace('.', ',')}
                    ${hasDiscount ? `<span>R$ ${produto.precoOriginal.toFixed(2).replace('.', ',')}</span>` : ''}
                </div>
                <div class="stock-info ${stockClass}">${stockText}</div>
                <div class="product-buttons">
                    ${produto.estoque > 0 ? 
                        `<button class="product-btn buy-btn" data-id="${produto.id}">
                            üõí Comprar
                        </button>` :
                        `<button class="product-btn disabled-btn" disabled>
                            üî¥ Esgotado
                        </button>`
                    }
                    <button class="product-btn details-btn" data-id="${produto.id}">
                        üëÄ Detalhes
                    </button>
                </div>
            </div>
        </div>
        `;
            });

            container.innerHTML = html;
        }

        // ============================================
        // BANNER ROTATIVO
        // ============================================

        function startBannerRotation() {
            const banners = document.querySelectorAll('.banner-slide');
            const dots = document.querySelectorAll('.banner-dot');

            if (banners.length === 0) return;

            let current = 0;

            function showSlide(index) {
                banners.forEach((banner, i) => {
                    banner.classList.remove('active');
                    dots[i].classList.remove('active');
                });

                banners[index].classList.add('active');
                dots[index].classList.add('active');
                current = index;
            }

            function nextSlide() {
                const nextIndex = (current + 1) % banners.length;
                showSlide(nextIndex);
            }

            showSlide(0);
            bannerInterval = setInterval(nextSlide, 5000);
        }

        function goToBannerSlide(index) {
            const banners = document.querySelectorAll('.banner-slide');
            const dots = document.querySelectorAll('.banner-dot');

            if (index >= 0 && index < banners.length) {
                banners.forEach((banner, i) => {
                    banner.classList.remove('active');
                    dots[i].classList.remove('active');
                });

                banners[index].classList.add('active');
                dots[index].classList.add('active');

                clearInterval(bannerInterval);
                bannerInterval = setInterval(() => {
                    const currentIndex = Array.from(banners).findIndex(b => b.classList.contains('active'));
                    const nextIndex = (currentIndex + 1) % banners.length;
                    goToBannerSlide(nextIndex);
                }, 5000);
            }
        }

        // ============================================
        // SISTEMA DE CARRINHO
        // ============================================

        function saveCart() {
            localStorage.setItem('jordanstore_cart_v2', JSON.stringify(carrinho));
        }

        function loadCart() {
            try {
                const saved = localStorage.getItem('jordanstore_cart_v2');
                if (saved) {
                    carrinho = JSON.parse(saved);

                    carrinho = carrinho.filter(item => {
                        const produto = produtos.find(p => p.id === item.id);
                        if (!produto) return false;

                        if (item.quantidade > produto.estoque) {
                            item.quantidade = produto.estoque;
                            if (item.quantidade === 0) return false;
                        }
                        return true;
                    });

                    saveCart();
                    updateCartDisplay();
                    console.log('Carrinho carregado:', carrinho.length, 'itens');
                }
            } catch (e) {
                console.error('Erro ao carregar carrinho:', e);
                carrinho = [];
            }
        }

        function addToCart(productId) {
            const produto = produtos.find(p => p.id === productId);
            if (!produto || produto.estoque === 0) {
                showNotification('Produto esgotado!', 'error');
                return;
            }

            const itemIndex = carrinho.findIndex(item => item.id === productId);

            if (itemIndex > -1) {
                if (carrinho[itemIndex].quantidade < produto.estoque) {
                    carrinho[itemIndex].quantidade++;
                } else {
                    showNotification('Quantidade m√°xima em estoque!', 'warning');
                    return;
                }
            } else {
                carrinho.push({
                    id: productId,
                    nome: produto.nome,
                    preco: produto.preco,
                    quantidade: 1,
                    imagem: produto.imagem
                });
            }

            saveCart();
            updateCartDisplay();
            showNotification(`${produto.nome} adicionado ao carrinho!`, 'success');
        }

        function updateCartDisplay() {
            const cartCount = document.querySelector('.cart-count');
            const cartItems = document.getElementById('cartItems');
            const cartSummary = document.getElementById('cartSummary');
            const checkoutBtn = document.getElementById('checkoutBtn');
            const clearCartBtn = document.getElementById('clearCartBtn');

            const totalItems = carrinho.reduce((sum, item) => sum + item.quantidade, 0);
            cartCount.textContent = totalItems;

            if (carrinho.length === 0) {
                cartItems.innerHTML = `
            <div class="empty-cart">
                <div>üõçÔ∏è</div>
                <p>Seu carrinho est√° vazio</p>
                <p style="font-size: 14px; margin-top: 10px;">Adicione produtos para continuar</p>
            </div>
        `;
                cartSummary.style.display = 'none';
                checkoutBtn.style.display = 'none';
                clearCartBtn.style.display = 'none';
                return;
            }

            cartSummary.style.display = 'block';
            checkoutBtn.style.display = 'flex';
            clearCartBtn.style.display = 'flex';

            const subtotal = carrinho.reduce((sum, item) => sum + (item.preco * item.quantidade), 0);
            const frete = freteCalculado ? clienteInfo.frete : 9.90;
            const total = subtotal + frete;

            document.getElementById('cartSubtotal').textContent = `R$ ${subtotal.toFixed(2).replace('.', ',')}`;
            document.getElementById('cartShipping').textContent = `R$ ${frete.toFixed(2).replace('.', ',')}`;
            document.getElementById('cartTotal').textContent = `R$ ${total.toFixed(2).replace('.', ',')}`;

            let html = '';
            carrinho.forEach(item => {
                const itemTotal = item.preco * item.quantidade;

                html += `
        <div class="cart-item">
            <img src="${item.imagem}" alt="${item.nome}" class="cart-item-image">
            <div class="cart-item-details">
                <div class="cart-item-name">${item.nome}</div>
                <div class="cart-item-price">R$ ${itemTotal.toFixed(2).replace('.', ',')}</div>
                <div class="cart-item-actions">
                    <div class="quantity-control">
                        <button class="quantity-btn" onclick="updateCartItem('${item.id}', -1)">-</button>
                        <span style="font-weight: bold;">${item.quantidade}</span>
                        <button class="quantity-btn" onclick="updateCartItem('${item.id}', 1)">+</button>
                    </div>
                    <button class="remove-item" onclick="removeFromCart('${item.id}')">Remover</button>
                </div>
            </div>
        </div>
        `;
            });

            cartItems.innerHTML = html;
        }

        function updateCartItem(productId, change) {
            const itemIndex = carrinho.findIndex(item => item.id === productId);
            if (itemIndex === -1) return;

            const item = carrinho[itemIndex];
            const produto = produtos.find(p => p.id === productId);

            if (!produto) return;

            const newQuantity = item.quantidade + change;

            if (newQuantity < 1) {
                carrinho.splice(itemIndex, 1);
                showNotification('Item removido do carrinho', 'warning');
            } else if (newQuantity > produto.estoque) {
                showNotification('Quantidade m√°xima em estoque!', 'warning');
                return;
            } else {
                carrinho[itemIndex].quantidade = newQuantity;
            }

            saveCart();
            updateCartDisplay();
        }

        function removeFromCart(productId) {
            const itemIndex = carrinho.findIndex(item => item.id === productId);
            if (itemIndex > -1) {
                carrinho.splice(itemIndex, 1);
                saveCart();
                updateCartDisplay();
                showNotification('Item removido do carrinho', 'warning');
            }
        }

        function clearCart() {
            if (carrinho.length === 0) {
                showNotification('Carrinho j√° est√° vazio!', 'warning');
                return;
            }

            if (confirm('Tem certeza que deseja limpar todo o carrinho?')) {
                carrinho = [];
                saveCart();
                updateCartDisplay();
                showNotification('Carrinho limpo com sucesso!', 'success');
            }
        }

        function toggleCart() {
            const cartModal = document.getElementById('cartModal');
            cartModal.classList.toggle('active');
            document.body.style.overflow = cartModal.classList.contains('active') ? 'hidden' : '';
        }

        // ============================================
        // SISTEMA DE CEP E FRETE
        // ============================================

        function formatCEP(cep) {
            cep = cep.replace(/\D/g, '');
            
            if (cep.length > 5) {
                cep = cep.substring(0, 5) + '-' + cep.substring(5, 8);
            }
            
            return cep;
        }

        function isValidCEP(cep) {
            const cepNumerico = cep.replace(/\D/g, '');
            return cepNumerico.length === 8;
        }

        function getEstadoFromCEP(cep) {
            cep = cep.replace(/\D/g, '');
            const cepNum = parseInt(cep);
            
            // Mapeamento simplificado de CEPs por estado
            if (cepNum >= 1000000 && cepNum <= 1999999) return 'SP';
            if (cepNum >= 2000000 && cepNum <= 2899999) return 'RJ';
            if (cepNum >= 2900000 && cepNum <= 2999999) return 'ES';
            if (cepNum >= 3000000 && cepNum <= 3999999) return 'MG';
            if (cepNum >= 4000000 && cepNum <= 4899999) return 'BA';
            if (cepNum >= 4900000 && cepNum <= 4999999) return 'SE';
            if (cepNum >= 5000000 && cepNum <= 5699999) return 'PE';
            if (cepNum >= 5700000 && cepNum <= 5799999) return 'AL';
            if (cepNum >= 5800000 && cepNum <= 5899999) return 'PB';
            if (cepNum >= 5900000 && cepNum <= 5999999) return 'RN';
            if (cepNum >= 6000000 && cepNum <= 6399999) return 'CE';
            if (cepNum >= 6400000 && cepNum <= 6499999) return 'PI';
            if (cepNum >= 6500000 && cepNum <= 6599999) return 'MA';
            if (cepNum >= 6600000 && cepNum <= 6889999) return 'PA';
            if (cepNum >= 6900000 && cepNum <= 6929999) return 'AM';
            if (cepNum >= 6930000 && cepNum <= 6939999) return 'RR';
            if (cepNum >= 6940000 && cepNum <= 6989999) return 'AM';
            if (cepNum >= 6990000 && cepNum <= 6999999) return 'AC';
            if (cepNum >= 7000000 && cepNum <= 7369999) return 'DF';
            if (cepNum >= 7370000 && cepNum <= 7679999) return 'GO';
            if (cepNum >= 7680000 && cepNum <= 7699999) return 'RO';
            if (cepNum >= 7700000 && cepNum <= 7799999) return 'TO';
            if (cepNum >= 7800000 && cepNum <= 7889999) return 'MT';
            if (cepNum >= 7900000 && cepNum <= 7999999) return 'MS';
            if (cepNum >= 8000000 && cepNum <= 8799999) return 'PR';
            if (cepNum >= 8800000 && cepNum <= 8999999) return 'SC';
            if (cepNum >= 9000000 && cepNum <= 9999999) return 'RS';
            
            return null;
        }

        function getCidadeFromEstado(estado) {
            const cidadesPorEstado = {
                'RS': 'Porto Alegre',
                'SC': 'Florian√≥polis',
                'PR': 'Curitiba',
                'SP': 'S√£o Paulo',
                'RJ': 'Rio de Janeiro',
                'MG': 'Belo Horizonte',
                'ES': 'Vit√≥ria',
                'DF': 'Bras√≠lia',
                'GO': 'Goi√¢nia',
                'MT': 'Cuiab√°',
                'MS': 'Campo Grande',
                'BA': 'Salvador',
                'PE': 'Recife',
                'CE': 'Fortaleza',
                'MA': 'S√£o Lu√≠s',
                'PB': 'Jo√£o Pessoa',
                'RN': 'Natal',
                'AL': 'Macei√≥',
                'SE': 'Aracaju',
                'PI': 'Teresina',
                'AM': 'Manaus',
                'PA': 'Bel√©m',
                'RO': 'Porto Velho',
                'AC': 'Rio Branco',
                'RR': 'Boa Vista',
                'AP': 'Macap√°',
                'TO': 'Palmas'
            };
            
            return cidadesPorEstado[estado] || 'Cidade Principal';
        }

        function calculateFrete(cep) {
            cep = formatCEP(cep);
            
            if (!isValidCEP(cep)) {
                return {
                    success: false,
                    error: 'CEP inv√°lido. Digite um CEP com 8 d√≠gitos.'
                };
            }
            
            const estado = getEstadoFromCEP(cep);
            
            if (!estado) {
                return {
                    success: false,
                    error: 'CEP n√£o encontrado ou fora da √°rea de entrega.'
                };
            }
            
            if (!tabelaFrete[estado]) {
                return {
                    success: false,
                    error: 'N√£o realizamos entregas para este estado.'
                };
            }
            
            const freteInfo = tabelaFrete[estado];
            const cidade = getCidadeFromEstado(estado);
            
            const prazoPadrao = Math.floor(Math.random() * 4) + 3;
            const prazoExpresso = Math.floor(Math.random() * 2) + 1;
            
            return {
                success: true,
                cep: cep,
                estado: estado,
                cidade: cidade,
                fretes: [
                    {
                        tipo: 'padrao',
                        nome: 'Entrega Padr√£o',
                        valor: freteInfo.padrao,
                        prazo: prazoPadrao,
                        descricao: `Entrega em ${prazoPadrao} dias √∫teis`
                    },
                    {
                        tipo: 'expresso',
                        nome: 'Entrega Expressa',
                        valor: freteInfo.expresso,
                        prazo: prazoExpresso,
                        descricao: `Entrega em ${prazoExpresso} dias √∫teis`
                    }
                ]
            };
        }

        function showFreteOptions(resultado) {
            clienteInfo.cep = resultado.cep;
            clienteInfo.estado = resultado.estado;
            clienteInfo.cidade = resultado.cidade;
            clienteInfo.frete = resultado.fretes[0].valor;
            clienteInfo.entrega = 'padrao';
            saveClienteInfo();
            
            const freteOptionsHTML = `
        <div class="cep-info">
            <div>
                üìç <strong>${resultado.cidade} - ${resultado.estado}</strong><br>
                <small>CEP: ${resultado.cep}</small>
            </div>
            <button class="change-cep-btn" onclick="openCepModal()">Alterar CEP</button>
        </div>
        
        <div class="frete-options" id="freteOptions">
            <h4 style="margin-bottom: 15px; font-size: 16px;">üöö Escolha a entrega:</h4>
            ${resultado.fretes.map((frete, index) => `
                <div class="frete-option ${index === 0 ? 'selected' : ''}" 
                     onclick="selectFrete('${frete.tipo}', ${frete.valor}, ${index})">
                    <div>
                        <strong>${frete.nome}</strong>
                        <div class="frete-details">${frete.descricao}</div>
                    </div>
                    <div style="font-weight: bold; font-size: 18px;">
                        R$ ${frete.valor.toFixed(2).replace('.', ',')}
                    </div>
                </div>
            `).join('')}
        </div>
    `;
            
            const checkoutForm = document.getElementById('checkoutForm');
            if (checkoutForm) {
                const existingFreteSection = document.getElementById('freteSection');
                if (existingFreteSection) {
                    existingFreteSection.innerHTML = freteOptionsHTML;
                } else {
                    const enderecoGroup = document.querySelector('.form-group label[for="endereco"]');
                    if (enderecoGroup) {
                        const div = document.createElement('div');
                        div.id = 'freteSection';
                        div.innerHTML = freteOptionsHTML;
                        enderecoGroup.parentNode.parentNode.insertBefore(div, enderecoGroup.parentNode);
                    }
                }
            }
            
            freteCalculado = true;
            updateOrderSummary();
        }

        function selectFrete(tipo, valor, index) {
            clienteInfo.entrega = tipo;
            clienteInfo.frete = valor;
            
            document.querySelectorAll('.frete-option').forEach((option, i) => {
                option.classList.toggle('selected', i === index);
            });
            
            updateOrderSummary();
        }

        function updateOrderSummary() {
            const subtotal = carrinho.reduce((sum, item) => sum + (item.preco * item.quantidade), 0);
            const total = subtotal + (freteCalculado ? clienteInfo.frete : 9.90);
            
            const orderSummary = document.querySelector('.order-summary');
            if (orderSummary) {
                const freteItem = orderSummary.querySelector('.frete-item');
                if (freteItem) {
                    freteItem.innerHTML = `
                        <span>Frete (${clienteInfo.entrega === 'expresso' ? 'Expressa' : 'Padr√£o'})</span>
                        <span>R$ ${(freteCalculado ? clienteInfo.frete : 9.90).toFixed(2).replace('.', ',')}</span>
                    `;
                }
                
                const totalElement = orderSummary.querySelector('.order-total span:last-child');
                if (totalElement) {
                    totalElement.textContent = `R$ ${total.toFixed(2).replace('.', ',')}`;
                }
            }
        }

        function openCepModal() {
            document.getElementById('cepModal').classList.add('active');
            document.body.style.overflow = 'hidden';
            
            const cepInput = document.getElementById('cepInputModal');
            if (clienteInfo.cep) {
                cepInput.value = clienteInfo.cep;
            }
            
            document.getElementById('cepErrorModal').style.display = 'none';
        }

        function closeCepModal() {
            document.getElementById('cepModal').classList.remove('active');
            document.body.style.overflow = '';
        }

        function calculateFreteFromModal() {
            const cepInput = document.getElementById('cepInputModal');
            const cepError = document.getElementById('cepErrorModal');
            const btn = event.target;
            const originalText = btn.innerHTML;
            
            const cep = cepInput.value.trim();
            if (!isValidCEP(cep)) {
                cepError.textContent = 'Digite um CEP v√°lido com 8 d√≠gitos';
                cepError.style.display = 'block';
                return;
            }
            
            btn.innerHTML = 'Calculando... <div class="frete-loading"></div>';
            btn.disabled = true;
            
            setTimeout(() => {
                const resultado = calculateFrete(cep);
                
                if (resultado.success) {
                    closeCepModal();
                    showFreteOptions(resultado);
                    showNotification(`Frete calculado para ${resultado.cidade}-${resultado.estado}`, 'success');
                } else {
                    cepError.textContent = resultado.error;
                    cepError.style.display = 'block';
                }
                
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 1500);
        }

        function calculateFreteFromCheckout() {
            const cepInput = document.getElementById('cepInputCheckout');
            const cepError = document.getElementById('cepErrorCheckout');
            const btn = event.target;
            const originalText = btn.innerHTML;
            
            const cep = cepInput.value.trim();
            if (!isValidCEP(cep)) {
                cepError.textContent = 'Digite um CEP v√°lido com 8 d√≠gitos';
                cepError.style.display = 'block';
                return;
            }
            
            btn.innerHTML = 'Calculando... <div class="frete-loading"></div>';
            btn.disabled = true;
            
            setTimeout(() => {
                const resultado = calculateFrete(cep);
                
                if (resultado.success) {
                    showFreteOptions(resultado);
                    showNotification(`Frete calculado para ${resultado.cidade}-${resultado.estado}`, 'success');
                } else {
                    cepError.textContent = resultado.error;
                    cepError.style.display = 'block';
                }
                
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 1500);
        }

        // ============================================
        // CHECKOUT E FINALIZA√á√ÉO
        // ============================================

        function openCheckout() {
            if (carrinho.length === 0) {
                showNotification('Carrinho vazio! Adicione produtos primeiro.', 'warning');
                return;
            }

            const modal = document.getElementById('checkoutModal');
            const form = document.getElementById('checkoutForm');

            const subtotal = carrinho.reduce((sum, item) => sum + (item.preco * item.quantidade), 0);
            const freteAtual = freteCalculado ? clienteInfo.frete : 9.90;
            const total = subtotal + freteAtual;

            const freteSectionHTML = clienteInfo.cep ? `
        <div id="freteSection">
            <div class="cep-info">
                <div>
                    üìç <strong>${clienteInfo.cidade} - ${clienteInfo.estado}</strong><br>
                    <small>CEP: ${clienteInfo.cep}</small>
                </div>
                <button class="change-cep-btn" onclick="openCepModal()">Alterar CEP</button>
            </div>
            
            <div class="frete-options" id="freteOptions">
                <h4 style="margin-bottom: 15px; font-size: 16px;">üöö Escolha a entrega:</h4>
                <div class="frete-option ${clienteInfo.entrega === 'padrao' ? 'selected' : ''}" 
                     onclick="selectFrete('padrao', ${tabelaFrete[clienteInfo.estado]?.padrao || 9.90}, 0)">
                    <div>
                        <strong>Entrega Padr√£o</strong>
                        <div class="frete-details">Entrega em ${Math.floor(Math.random() * 4) + 3} dias √∫teis</div>
                    </div>
                    <div style="font-weight: bold; font-size: 18px;">
                        R$ ${(tabelaFrete[clienteInfo.estado]?.padrao || 9.90).toFixed(2).replace('.', ',')}
                    </div>
                </div>
                <div class="frete-option ${clienteInfo.entrega === 'expresso' ? 'selected' : ''}" 
                     onclick="selectFrete('expresso', ${tabelaFrete[clienteInfo.estado]?.expresso || 19.90}, 1)">
                    <div>
                        <strong>Entrega Expressa</strong>
                        <div class="frete-details">Entrega em ${Math.floor(Math.random() * 2) + 1} dias √∫teis</div>
                    </div>
                    <div style="font-weight: bold; font-size: 18px;">
                        R$ ${(tabelaFrete[clienteInfo.estado]?.expresso || 19.90).toFixed(2).replace('.', ',')}
                    </div>
                </div>
            </div>
        </div>
    ` : `
        <div id="freteSection" style="margin-bottom: 20px;">
            <div style="background: #fef9e7; padding: 15px; border-radius: 8px; text-align: center;">
                <p style="margin: 0 0 10px 0;">
                    üì¶ <strong>Calcule o frete para sua regi√£o</strong><br>
                    <small>Informe seu CEP para ver o valor exato</small>
                </p>
                <div class="cep-form">
                    <input type="text" 
                           id="cepInputCheckout" 
                           class="cep-input" 
                           placeholder="Digite seu CEP"
                           maxlength="9">
                    <button class="calculate-frete-btn" onclick="calculateFreteFromCheckout()">
                        Calcular Frete
                    </button>
                </div>
                <div id="cepErrorCheckout" class="cep-error"></div>
            </div>
        </div>
    `;

            form.innerHTML = `
        <div class="order-summary">
            <h4>üõí Resumo do Pedido</h4>
            ${carrinho.map(item => `
                <div class="order-item">
                    <span>${item.quantidade}x ${item.nome}</span>
                    <span>R$ ${(item.preco * item.quantidade).toFixed(2).replace('.', ',')}</span>
                </div>
            `).join('')}
            <div class="order-item">
                <span>Subtotal</span>
                <span>R$ ${subtotal.toFixed(2).replace('.', ',')}</span>
            </div>
            <div class="order-item frete-item">
                <span>Frete</span>
                <span>R$ ${freteAtual.toFixed(2).replace('.', ',')}</span>
            </div>
            <div class="order-total">
                <span>TOTAL</span>
                <span>R$ ${total.toFixed(2).replace('.', ',')}</span>
            </div>
        </div>
        
        ${freteSectionHTML}
        
        <div class="form-group">
            <label for="nome">üë§ Nome Completo *</label>
            <input type="text" id="nome" value="${clienteInfo.nome}" placeholder="Digite seu nome completo" required>
        </div>
        
        <div class="form-group">
            <label for="telefone">üì± Telefone/WhatsApp *</label>
            <input type="tel" id="telefone" value="${clienteInfo.telefone}" placeholder="(00) 00000-0000" required>
        </div>
        
        <div class="form-group">
            <label for="email">üìß E-mail</label>
            <input type="email" id="email" value="${clienteInfo.email}" placeholder="seuemail@exemplo.com">
        </div>
        
        <div class="form-group">
            <label for="endereco">üè† Endere√ßo de Entrega *</label>
            <textarea id="endereco" placeholder="Rua, N√∫mero, Bairro, Cidade - Estado, CEP" required>${clienteInfo.endereco}</textarea>
        </div>
        
        <div class="form-group">
            <label>üí≥ Forma de Pagamento *</label>
            <div class="payment-methods">
                <div class="payment-option active" onclick="selectPayment('pix')">
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <div class="payment-icon">üè¶</div>
                        <div>
                            <strong>PIX</strong>
                            <div style="font-size: 12px; color: #666;">Pagamento instant√¢neo</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <label for="observacoes">üìù Observa√ß√µes</label>
            <textarea id="observacoes" placeholder="Observa√ß√µes sobre o pedido, ponto de refer√™ncia, etc.">${clienteInfo.observacoes}</textarea>
        </div>
        
        <button class="submit-order-btn" onclick="sendWhatsAppOrder()">
            üì± Enviar Pedido pelo WhatsApp
        </button>
        
        <p style="text-align: center; margin-top: 15px; color: #666; font-size: 13px;">
            Ap√≥s enviar o pedido, voc√™ ser√° direcionado para o WhatsApp para finalizar a compra.
        </p>
    `;

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            toggleCart();
        }

        function closeCheckout() {
            document.getElementById('checkoutModal').classList.remove('active');
            document.body.style.overflow = '';
        }

        function selectPayment(method) {
            clienteInfo.pagamento = method;
            document.querySelectorAll('.payment-option').forEach(option => {
                option.classList.remove('active');
            });
            event.target.closest('.payment-option').classList.add('active');
        }

        function sendWhatsAppOrder() {
            clienteInfo.nome = document.getElementById('nome').value.trim();
            clienteInfo.telefone = document.getElementById('telefone').value.trim();
            clienteInfo.email = document.getElementById('email').value.trim();
            clienteInfo.endereco = document.getElementById('endereco').value.trim();
            clienteInfo.observacoes = document.getElementById('observacoes').value.trim();

            if (!clienteInfo.nome || !clienteInfo.telefone || !clienteInfo.endereco) {
                showNotification('Preencha todos os campos obrigat√≥rios!', 'error');
                return;
            }

            if (!freteCalculado && !clienteInfo.cep) {
                showNotification('Por favor, calcule o frete informando seu CEP!', 'error');
                openCepModal();
                return;
            }

            const phoneRegex = /^(\d{10,11})|(\(\d{2}\)\s?\d{4,5}-\d{4})$/;
            if (!phoneRegex.test(clienteInfo.telefone.replace(/\D/g, ''))) {
                showNotification('Digite um telefone v√°lido!', 'error');
                return;
            }

            const subtotal = carrinho.reduce((sum, item) => sum + (item.preco * item.quantidade), 0);
            const frete = freteCalculado ? clienteInfo.frete : 9.90;
            const total = subtotal + frete;

            let message = `*üõí NOVO PEDIDO - Jordan Store*\n\n`;
            message += `*Cliente:* ${clienteInfo.nome}\n`;
            message += `*Telefone:* ${clienteInfo.telefone}\n`;
            if (clienteInfo.email) message += `*E-mail:* ${clienteInfo.email}\n`;
            message += `*Endere√ßo:*\n${clienteInfo.endereco}\n`;
            if (clienteInfo.cep) message += `*CEP:* ${clienteInfo.cep}\n`;
            message += `*Cidade/UF:* ${clienteInfo.cidade || 'N√£o informado'}/${clienteInfo.estado || 'N√£o informado'}\n\n`;
            message += `*Pagamento:* PIX\n`;
            message += `*Entrega:* ${clienteInfo.entrega === 'expresso' ? 'Expressa' : 'Padr√£o'}\n`;
            message += `*Frete:* R$ ${frete.toFixed(2).replace('.', ',')}\n\n`;

            message += `*ITENS DO PEDIDO:*\n`;
            carrinho.forEach(item => {
                message += `‚Ä¢ ${item.quantidade}x ${item.nome} - R$ ${(item.preco * item.quantidade).toFixed(2).replace('.', ',')}\n`;
            });

            message += `\n*RESUMO DE VALORES:*\n`;
            message += `Subtotal: R$ ${subtotal.toFixed(2).replace('.', ',')}\n`;
            message += `Frete: R$ ${frete.toFixed(2).replace('.', ',')}\n`;
            message += `*TOTAL: R$ ${total.toFixed(2).replace('.', ',')}*\n`;

            if (clienteInfo.observacoes) {
                message += `\n*Observa√ß√µes do cliente:*\n${clienteInfo.observacoes}\n`;
            }

            message += `\nüìÖ *Data do pedido:* ${new Date().toLocaleString('pt-BR')}`;
            message += `\nüÜî *ID do pedido:* ${Date.now().toString(36).toUpperCase()}`;

            carrinho.forEach(item => {
                const produtoIndex = produtos.findIndex(p => p.id === item.id);
                if (produtoIndex !== -1) {
                    produtos[produtoIndex].estoque -= item.quantidade;
                }
            });

            carrinho = [];
            saveCart();
            updateCartDisplay();
            closeCheckout();
            updateProductsDisplay();

            const encodedMessage = encodeURIComponent(message);
            const phoneNumber = '555181875780';
            const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;

            window.open(whatsappURL, '_blank');

            showNotification('Pedido enviado com sucesso! Verifique o WhatsApp.', 'success');

            clienteInfo = {
                nome: '',
                telefone: '',
                email: '',
                endereco: '',
                cep: clienteInfo.cep,
                cidade: clienteInfo.cidade,
                estado: clienteInfo.estado,
                pagamento: 'pix',
                entrega: 'padrao',
                frete: freteCalculado ? clienteInfo.frete : 9.90,
                observacoes: ''
            };
            saveClienteInfo();
        }

        // ============================================
        // MODAL DE DETALHES DO PRODUTO
        // ============================================

        function showProductDetails(productId) {
            const produto = produtos.find(p => p.id === productId);
            if (!produto) return;

            currentProductId = productId;
            currentCarouselIndex = 0;

            const modal = document.getElementById('detailsModal');
            const stockClass = getStockClass(produto.estoque);
            const stockText = getStockText(produto.estoque);
            const hasDiscount = produto.precoOriginal && produto.precoOriginal > produto.preco;

            const carouselHTML = produto.imagens && produto.imagens.length > 0 ? `
        <div class="image-carousel">
            <div class="carousel-images" id="carouselImages">
                ${produto.imagens.map((img, index) => `
                    <img src="${img}" class="carousel-image" data-index="${index}" loading="lazy">
                `).join('')}
            </div>
            
            <div class="carousel-controls">
                <button class="carousel-btn" onclick="prevImage()">‚Äπ</button>
                <button class="carousel-btn" onclick="nextImage()">‚Ä∫</button>
            </div>
            
            <div class="carousel-indicators" id="carouselIndicators">
                ${produto.imagens.map((_, index) => `
                    <button class="carousel-indicator ${index === 0 ? 'active' : ''}" 
                            onclick="goToImage(${index})"></button>
                `).join('')}
            </div>
        </div>
    ` : '';

            const thumbnailsHTML = produto.imagens && produto.imagens.length > 0 ? `
        <div class="image-thumbnails" id="imageThumbnails">
            ${produto.imagens.map((img, index) => `
                <img src="${img}" class="thumbnail ${index === 0 ? 'active' : ''}" 
                     onclick="goToImage(${index})" loading="lazy">
            `).join('')}
        </div>
    ` : '';

            const specsHTML = produto.especificacoes ? `
        <div class="product-specs">
            <h4>üìã Especifica√ß√µes</h4>
            <div class="specs-grid">
                ${Object.entries(produto.especificacoes).map(([key, value]) => `
                    <div class="spec-item">
                        <div>‚Ä¢ ${key.charAt(0).toUpperCase() + key.slice(1)}:</div>
                        <div><strong>${value}</strong></div>
                    </div>
                `).join('')}
            </div>
        </div>
    ` : '';

            modal.innerHTML = `
        <div class="details-content">
            <button class="close-modal" onclick="closeModal('detailsModal')">√ó</button>
            
            ${carouselHTML}
            ${thumbnailsHTML}
            
            <div class="product-details">
                <h2>${produto.nome}</h2>
                
                <div class="product-details-price">
                    R$ ${produto.preco.toFixed(2).replace('.', ',')}
                    ${hasDiscount ? 
                        `<span style="font-size: 18px; color: #999; text-decoration: line-through; margin-left: 10px;">
                            De: R$ ${produto.precoOriginal.toFixed(2).replace('.', ',')}
                        </span>` : ''
                    }
                </div>
                
                <div class="stock-info ${stockClass}" style="display: inline-block; padding: 8px 16px;">
                    ${stockText}
                </div>
                
                <p class="product-description">${produto.descricao}</p>
                
                ${specsHTML}
                
                <div style="margin-top: 25px;">
                    ${produto.estoque > 0 ? 
                        `<button onclick="addToCart('${produto.id}'); showNotification('${produto.nome} adicionado ao carrinho!', 'success')" 
                                style="width: 100%; padding: 16px; background: var(--primary-color); color: white; border: none; border-radius: var(--border-radius); font-weight: bold; cursor: pointer; font-size: 16px; transition: var(--transition);">
                            üõí Adicionar ao Carrinho
                        </button>` :
                        `<div style="text-align: center; padding: 16px; background: #f8d7da; color: #721c24; border-radius: var(--border-radius); font-size: 15px;">
                            üî¥ Produto temporariamente esgotado
                        </div>`
                    }
                </div>
            </div>
        </div>
    `;

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';

            if (produto.imagens && produto.imagens.length > 0) {
                initCarousel();
            }
        }

        function initCarousel() {
            if (autoScrollInterval) clearInterval(autoScrollInterval);

            autoScrollInterval = setInterval(() => {
                nextImage();
            }, 4000);

            updateCarousel();
        }

        function nextImage() {
            const produto = produtos.find(p => p.id === currentProductId);
            if (!produto || !produto.imagens || produto.imagens.length === 0) return;

            currentCarouselIndex = (currentCarouselIndex + 1) % produto.imagens.length;
            updateCarousel();
            resetAutoScroll();
        }

        function prevImage() {
            const produto = produtos.find(p => p.id === currentProductId);
            if (!produto || !produto.imagens || produto.imagens.length === 0) return;

            currentCarouselIndex = (currentCarouselIndex - 1 + produto.imagens.length) % produto.imagens.length;
            updateCarousel();
            resetAutoScroll();
        }

        function goToImage(index) {
            currentCarouselIndex = index;
            updateCarousel();
            resetAutoScroll();
        }

        function updateCarousel() {
            const carouselImages = document.getElementById('carouselImages');
            const indicators = document.querySelectorAll('.carousel-indicator');
            const thumbnails = document.querySelectorAll('.thumbnail');

            if (carouselImages) {
                carouselImages.style.transform = `translateX(-${currentCarouselIndex * 100}%)`;
            }

            indicators.forEach((indicator, index) => {
                indicator.classList.toggle('active', index === currentCarouselIndex);
            });

            thumbnails.forEach((thumbnail, index) => {
                thumbnail.classList.toggle('active', index === currentCarouselIndex);
            });
        }

        function resetAutoScroll() {
            if (autoScrollInterval) {
                clearInterval(autoScrollInterval);
                autoScrollInterval = setInterval(() => {
                    nextImage();
                }, 4000);
            }
        }

        function closeModal(modalId) {
            if (autoScrollInterval) {
                clearInterval(autoScrollInterval);
                autoScrollInterval = null;
            }

            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = '';
        }

        function closeAllModals() {
            closeModal('detailsModal');
            closeCheckout();
            closeCepModal();
            document.getElementById('cartModal').classList.remove('active');
            document.body.style.overflow = '';
        }

        // ============================================
        // NOTIFICA√á√ïES
        // ============================================

        function showNotification(message, type = 'success') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notification => notification.remove());

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;

            let icon = '‚úÖ';
            if (type === 'error') icon = '‚ùå';
            if (type === 'warning') icon = '‚ö†Ô∏è';

            notification.innerHTML = `
        <div class="notification-icon">${icon}</div>
        <div>${message}</div>
    `;

            document.body.appendChild(notification);

            setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.animation = 'slideOutRight 0.3s ease';
                    setTimeout(() => notification.remove(), 300);
                }
            }, 3000);
        }

        // ============================================
        // FIM DO C√ìDIGO
        // ============================================

        window.addEventListener('resize', function() {
            updateProductsDisplay();
        });

        setTimeout(() => {
            if (!document.getElementById('allProducts').innerHTML) {
                updateProductsDisplay();
            }
        }, 100);

        window.addEventListener('beforeunload', function(e) {
            if (carrinho.length > 0) {
                saveCart();
            }
        });
    </script>
</body>

</html>
